page {
  font-size: 26rpx;
  color: #222;
  background: #f8f8f8;
}
page, navigator, view, text, image {
  margin: 0;
  padding: 0;
}
/* 轮播点12rpx */
page .wx-swiper-dot{
  width: 10rpx;
  display: inline-flex;
  height: 10rpx;
  margin-right: 18rpx;
}
page .wx-swiper-dot::before{
  content: '';
  background: #d3d3d3;
  flex-grow: 1; 
  border-radius: 100%;

}
page .wx-swiper-dot-active::before{
  content: '';
  background:#E9472C;
  flex-grow: 1;
  border-radius: 100%;
}



